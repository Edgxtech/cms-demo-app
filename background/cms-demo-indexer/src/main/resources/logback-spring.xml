<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Include Spring Boot's default Logback configuration -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Modified pattern: shorter date, thread, and logger -->
            <pattern>%clr(%d{yy-MM-dd HH:mm:ss}){faint} %clr(%-5p) %clr([%8.8t]){faint} %clr(%-25.25logger{24}){cyan} %clr(:){faint} %m%n</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <!-- Root logger configuration -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

    <!-- Default profile (active when no profile is specified) -->
    <springProfile name="default">
        <logger name="tech.edgx" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>

        <logger name="com.bloxbean.cardano.client.backend.blockfrost.service"  level="INFO" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>

        <logger name="org.cardanofoundation" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>
    </springProfile>
</configuration>